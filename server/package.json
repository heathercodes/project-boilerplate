{
  "name": "project-boilerplate-server",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development nodemon -r dotenv/config src/index.ts",
    "test": "mocha",
    "lint": "eslint ./src/**/**.ts",
    "build": "tsc",
    "db:migrate:latest": "NODE_ENV=development knex migrate:latest",
    "db:migrate:rollback": "NODE_ENV=development knex migrate:rollback",
    "db:migrate:create": "knex migrate:make",
    "db:seed": "NODE_ENV=development knex seed:run"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "knex": "^1.0.1",
    "node-fetch": "^3.2.0",
    "pg": "^8.7.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/express": "^4.17.2",
    "@types/node": "^17.0.12",
    "@types/node-fetch": "^3.0.3",
    "@types/pg": "^8.6.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.11.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.19.1",
    "mocha": "^6.2.2",
    "nodemon": "^2.0.15",
    "ts-node": "^8.5.4",
    "typescript": "^4.5.5"
  }
}
